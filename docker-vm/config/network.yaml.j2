#cloud-config
network:
  version: 2
  ethernets:
    eth0:
      match:
        macaddress: {{ docker.net.macaddr }}
      set-name: eth0
      addresses:
        - {{ docker.net.ip }}
      nameservers:
        addresses:
          - {{ docker.net.nameserver }}
        search:
          - {{ docker.net.searchdomain }}
      routes:
        - to: "0.0.0.0/0"
          via: {{ docker.net.gateway }}
